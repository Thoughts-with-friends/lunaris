{
  "$schema": "../../../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "lunaris",
  "version": "../../../package.json",
  "identifier": "lunaris",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev:front",
    "beforeBuildCommand": "npm run build:front"
  },
  "app": {
    "windows": [
      {
        "title": "Lunaris",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
