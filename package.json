{
  "name": "lunaris",
  "version": "0.1.0",
  "private": true,
  "description": "A Nintendo DS emulator - Rust-based",
  "homepage": "https://github.com/Thoughts-with-friends/lunaris",
  "license": "GPL-3.0",
  "scripts": {
    "build": "rimraf ./gui/tauri/dist && tauri build --no-bundle -- --profile release",
    "build:front": "npm --workspace gui/tauri run build:front",
    "build:icons": "tauri icon ./gui/tauri/src-tauri/icons/icon.png",
    "dev": "tauri dev",
    "dev:front": "npm --workspace gui/tauri run dev:front",
    "fmt": "prettier --cache --write \"**/*.{yaml,yml}\" --ignore-path ./.gitignore && cargo fmt --all",
    "lint": "cargo clippy --workspace",
    "lint:fix-front": "npm --workspace gui/tauri run lint:fix",
    "lint:fix": "cargo clippy --workspace --fix --allow-staged --allow-dirty",
    "tauri": "tauri",
    "test": "npm --workspace gui/tauri run test"
  },
  "devDependencies": {
    "@tanstack/router-plugin": "^1.158.1",
    "@tauri-apps/cli": "2.9.6",
    "@types/node": "25.0.3",
    "prettier": "3.7.4",
    "rimraf": "^6"
  },
  "workspaces": [
    "gui/tauri"
  ],
  "overrides": {
    "monaco-editor": "0.49.0"
  },
  "packageManager": "npm@11.5.2"
}
